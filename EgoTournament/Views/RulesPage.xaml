<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:vm="clr-namespace:EgoTournament.ViewModels"
              xmlns:m="clr-namespace:EgoTournament.Models"
              x:Class="EgoTournament.Views.RulesPage"
              x:DataType="vm:RulesViewModel"
              Title="RULES"
             BackgroundColor="#000000">
    <Grid>
        <!-- both children default to cell (0,0). Overlaid. -->
        <Image Aspect="AspectFit" Source="lolrules.gif" Loaded="Image_SizeChanged"/>
        <!-- nested grid. OR StackLayout, etc. -->
        <Grid>
            <VerticalStackLayout>
                <CollectionView ItemsSource="{Binding Rules}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Margin="4" Padding="12" Text="{Binding .}" FontSize="Medium" FontAttributes="Bold" TextColor="White" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="Back" Command="{Binding BackCommand}" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>